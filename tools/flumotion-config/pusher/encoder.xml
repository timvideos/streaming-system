      <property name="bitrate">64000</property>
      <clock-master>false</clock-master>
    </component>

    <!-- AAC Audio Encoding -->
    <component name="encoder-audio-aac-high"
               type="faac-encoder"
               label="encoder-audio-aac-high"
               worker="localhost"
               project="flumotion"
               version="0.9.0.1">
      <eater name="default">
        <feed alias="default">producer-decoder:audio</feed>
